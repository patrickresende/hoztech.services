# Configuração padrão: normalize line endings para LF no commit e checkout
* text=auto

# Python files
*.py text diff=python
*.pyw text diff=python
*.pyx text diff=python
*.pxd text diff=python

# Django template files
*.html text diff=html
*.htm text diff=html
*.css text
*.js text
*.json text
*.yml text
*.yaml text
*.xml text

# Documentation
*.md text diff=markdown
*.txt text
*.rst text
*.pdf binary

# Django specific
*.po text
*.mo binary
manage.py text

# Scripts
*.sh text eol=lf
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Database files
*.db binary
*.sqlite3 binary

# Image files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg text

# Font files
*.ttf binary
*.eot binary
*.woff binary
*.woff2 binary

# Configuration files
*.env text
*.ini text
*.cfg text
*.conf text
requirements.txt text
Procfile text

# Git files
.gitattributes text
.gitignore text
.gitconfig text

# Docker
Dockerfile text
docker-compose.yml text
*.dockerignore text

# Render specific
render.yaml text

# Certificates and keys
*.pem text
*.key text
*.crt text
*.cer text 