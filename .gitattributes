# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text diff=python
*.pyw text diff=python
*.pyx text diff=python
*.pxd text diff=python

# Django templates
*.html text diff=html
*.css text diff=css
*.js text
*.json text
*.yml text
*.yaml text
*.md text diff=markdown

# Documentation
*.rst text
*.txt text
*.md text diff=markdown
*.pdf binary
*.doc binary
*.docx binary

# Graphics
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg text

# Scripts
*.sh text eol=lf
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Configuration
*.conf text
*.config text
*.ini text
*.cfg text
*.properties text
*.env text
*.env.* text

# Database
*.sql text
*.sqlite3 binary

# Exclude files from exporting
.gitattributes export-ignore
.gitignore export-ignore
.gitkeep export-ignore

# Force batch scripts to always use CRLF line endings
*.{cmd,[cC][mM][dD]} text eol=crlf
*.{bat,[bB][aA][tT]} text eol=crlf

# Force bash scripts to always use LF line endings
*.sh text eol=lf
*.bash text eol=lf

# Archives
*.7z binary
*.gz binary
*.tar binary
*.tgz binary
*.zip binary

# Font files
*.ttf binary
*.eot binary
*.woff binary
*.woff2 binary

# Specific files that should always have specific line endings
Procfile text eol=lf
.env.example text eol=lf
requirements.txt text eol=lf
runtime.txt text eol=lf

# Django specific
*.po text
*.mo binary
manage.py text

# Configuration files
*.env text
*.ini text
*.cfg text
*.conf text
requirements.txt text
Procfile text

# Git files
.gitattributes text
.gitignore text
.gitconfig text

# Docker
Dockerfile text
docker-compose.yml text
*.dockerignore text

# Render specific
render.yaml text

# Certificates and keys
*.pem text
*.key text
*.crt text
*.cer text 