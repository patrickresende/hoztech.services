# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text diff=python eol=lf
*.pyw text diff=python eol=lf
*.pyx text diff=python eol=lf
*.pxd text diff=python eol=lf
requirements.txt text eol=lf
Pipfile text eol=lf
Pipfile.lock text eol=lf

# Django templates
*.html text eol=lf
*.htm text eol=lf
*.css text eol=lf
*.js text eol=lf
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.xml text eol=lf

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf
*.zsh text eol=lf

# Documentation
*.md text diff=markdown eol=lf
*.rst text eol=lf
*.txt text eol=lf

# Docker
Dockerfile text eol=lf
docker-compose*.yml text eol=lf
*.dockerfile text eol=lf

# Config files
*.conf text eol=lf
*.cfg text eol=lf
*.ini text eol=lf
*.properties text eol=lf
*.toml text eol=lf
.env* text eol=lf
.gitignore text eol=lf
.gitattributes text eol=lf

# Binary files
*.db binary
*.p binary
*.pkl binary
*.pickle binary
*.pyc binary
*.pyd binary
*.pyo binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.gz binary
*.tar binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary 